<div class="container">
    <div class="row justify-content-center">
      <div class="col-6">
          <%= form_with(model: warehouse, local: true, validate: true) do |form| %>
              
              <%= render :partial=> "/layouts/common_partial/error_msg", locals: { localObj: warehouse ,insideApp: true }%>

              <div class="actions">

                <%= form_for(warehouse) do |f| %>
                  <div class="form-group">
                    <%= f.label :wh_code %>
                    <%= f.text_field :wh_code, autofocus: true, class: "form-control", validate: true %>
                  </div>

                  <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name , class: "form-control"%>
                  </div>

                  <div class="form-group">
                      <%= f.label :pincode %>
                      <%= f.text_field :pincode , class: "form-control"%>
                  </div>

                  <div class="form-group">
                      <%= f.label :max_capacity %>
                      <%= f.text_field :max_capacity , class: "form-control"%>
                  </div>

                <% end %>
                <%= form.submit "Create Warehouse",class: "btn btn-primary" %>
                <%= link_to 'Back', products_path ,class: "btn btn-primary" %>
              </div>
            <% end %>


      </div>
    </div>
</div>        



