

 <div class="container">
    <div class="row justify-content-center">
      <div class="col-6">     

        
          <%= render :partial=> "/layouts/common_partial/error_msg", locals: { localObj: resource, insideApp: false }%>  

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "Enter email"%>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "current-password" , class: "form-control",placeholder: "Enter password"%>
          </div>
          <div class="form-group form-check">
              <%= f.check_box :remember_me, class: "form-check-input", id: "exampleCheck1"  %>
              <%= f.label :remember_me, class: "form-check-label", for: "exampleCheck1"%>
          </div>
          <%= f.submit "Log in" ,class: "btn btn-primary"%>
        <% end %> 
      </div>
    </div>
  </div>        


