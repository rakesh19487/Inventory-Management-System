<%= render :partial=> "/layouts/common_partial/notice"%>

<div class="divFixHead">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Product Code</th>
          <th scope="col">Product Name</th>
          <% @warehouse.each do |e| %>
            <th scope="col"><%= e.name %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @products.each_with_index do |product,index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <th scope="row"><%= link_to product.sku_code, edit_product_path(product) %></th>
          <td><%= product.name %></td>
          <% product.product_warehouses.each do |ic| %>
            <td class="<%=changeColor(ic)%>"><%= ic.item_count %></td>
          <% end %>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
